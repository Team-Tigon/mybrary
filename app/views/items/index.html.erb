<h2>Name Matches</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @name_matches.each do |item| %>
      <tr>
        <td><%= link_to item.name, user_item_path(@user, item) %></td>
        <td><%= link_to 'Edit', edit_user_item_path(@user, item) %></td>
        <td><%= link_to 'Destroy', [@user, item], confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

