<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">

    <p id="notice"><%= notice %></p>
    <h3><%= @item.name %> - <%= @item.type_list %></h3>
    <h4>Tags: <%= @item.tag_list %></h4>

    <h4> History: </h4>
    <% @item.loans.each do |loan| %>
      <ol>
        <% if loan.borrowed_on %>
          <li><%= "Borrowed on #{loan.borrowed_on.strftime("%h %d")}" %></li>
        <% end %>
        <% if loan.returned_on %>
          <li><%= "Returned on #{loan.returned_on.strftime("%h %d")}" %></li>
        <% end %>
      </ol>
    <% end %>

    <h4>  Description:      </h4>
    <div><%= @item.description  %></div>

    <br>
    <% if current_user && current_user != @user && @item.available? %>
        <%= button_to "Request to Borrow", request_loan_path(current_user, @item.id), :class => "btn btn-primary btn-sm" %> 
    <% end %>
    <br>
    <% if current_user == @user %>
      <%= link_to 'Edit', edit_user_item_path(@user, @item) %> |
    <% end %>
    <%= link_to 'Back', user_path(@user) %>
     
  </div>
  <div class="col-md-1"></div>
</div>